					PrettyName = "In" .. i .. " -> Out" .. o,
					Style = "Button",
					Legend = tostring(i),
					Position = {
						0 + ((o+1) * 32),
						0 + (1.5 * 24 + ((i-1) * 24))
					},
					Size = {32,24}
				}
			end
		end

	elseif(page == 'Audio Matrix') then 
		for i = 1, audio_input_count do
			table.insert(
				graphics,
				{
					Type = "Text",
					Text = "In " .. i,
					Color = Colors.Black,
					Position = {
						(0 + 0),
						(0 + (1.5 * 24)) + ((i-1) * 24)
					},
					Size = {32,24}
				}
