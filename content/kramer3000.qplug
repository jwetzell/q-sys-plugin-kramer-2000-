				table.insert(
					graphics,
					{
						Type = "Text",
						Text = "Out\rAll",
						Color = Colors.Black,
						Position = {0 + ((o+1) * 32), (0 + (0.5 * 24))},
						Size = {32,24}
					}
				)
			else
				table.insert(
					graphics,
					{
						Type = "Text",
						Text = "Out\r" .. o,
						Color = Colors.Black,
						Position = {0 + ((o+1) * 32), (0 + (0.5 * 24))},
						Size = {32,24}
					}
